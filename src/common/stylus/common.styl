// mint-ui msgbox提示框样式
.mint-msgbox{
    border-radius 0.1rem;
    transform: translate3d(-50%,-70%,0)
}
.mint-msgbox-content{
    padding-top 5px
    color #999
}
.mint-indicator-wrapper{
    padding 10px
    line-height: 0
    .mint-indicator-text{
        font-size 14px
        line-height 14px
    }
}
.mint-msgbox-btns{
    height 49px
    line-height 49px
}
.mint-msgbox-cancel{
    font-size 15px
    color #333
}
.mint-msgbox-confirm {
    font-size 15px
    color #00bc71
}